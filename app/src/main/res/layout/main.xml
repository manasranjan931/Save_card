<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- Header aligned to top -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_arrow_back_white_24px"
            android:layout_marginLeft="13dp"
            android:id="@+id/btn_back_arrow_select_store"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select device"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:layout_centerInParent="false"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="220dp"
            android:visibility="gone"
            android:id="@+id/iv_wifi_direct_settings"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="13dp" />

        -->
    </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_gravity="center"
                android:max="100"
                android:progress="20"
                android:visibility="gone"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <fragment
            android:id="@+id/frag_list"
            class="in.bizzmark.test.wifi_direct.DeviceListFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <!-- Preview: layout=@layout/row_devices -->
        </fragment>

        <fragment
            class="in.bizzmark.test.wifi_direct.DeviceDetailFragment"
            android:id="@+id/frag_detail"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <!-- Preview: layout=@layout/device_detail -->
        </fragment>
    </LinearLayout>
</LinearLayout>
